
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin of a given company
    function isCompanyAdmin(companyId) {
      let userProfile = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return request.auth.uid != null &&
             userProfile.company_id == companyId &&
             userProfile.role == "Admin";
    }

    // Companies can be read by any authenticated user, but only created by the app
    match /companies/{companyId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid != null;
      allow update: if isCompanyAdmin(companyId);

      // Roles can only be managed by company admins
      match /roles/{roleId} {
        allow get, list, create: if isCompanyAdmin(companyId);
      }
      
      // Invites can only be managed by company admins
      match /invites/{inviteId} {
        allow get, list, create: if isCompanyAdmin(companyId);
      }
    }

    // Users can only be created during signup or by an admin.
    // Users can read their own profile.
    // Company admins can list all users in their company.
    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow list: if isCompanyAdmin(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.company_id);
    }
  }
}
