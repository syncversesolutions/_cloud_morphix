rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to create a company or user document.
    // This is required for the registration flow to work.
    match /companies/{companyId} {
      allow create: if request.auth != null;
      // Allow authenticated users to read company info (e.g., to verify a company ID exists)
      allow read: if request.auth != null;
    }

    match /users/{userId} {
      allow create: if request.auth != null;
      // A user can only read or update their own document after it's created.
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
