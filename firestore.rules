
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'companies' collection
    match /companies/{companyId} {
      // Allow any authenticated user to create a company. This is necessary for company registration.
      allow create: if request.auth != null;

      // Allow any authenticated user to GET a company document if they have the ID.
      // This is needed to verify a company ID exists when a new user registers.
      // It also allows logged-in users to get their company info.
      allow get: if request.auth != null;
      
      // Disallow listing all companies for security.
      allow list: if false;

      // For now, disallow updates and deletes from the client to prevent unauthorized changes.
      // This can be expanded later with role-based permissions.
      allow update, delete: if false;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can only create their own document.
      allow create: if request.auth.uid == userId;

      // A user can only read or update their own document.
      allow read, update: if request.auth.uid == userId;

      // Disallow deleting users from the client.
      allow delete: if false;
    }
  }
}
