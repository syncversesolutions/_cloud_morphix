
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to create a company.
    match /companies/{companyId} {
      allow create: if request.auth != null;
      // Once created, only let users associated with that company read it.
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.company_id == companyId;
    }

    // Allow any authenticated user to create their own user document.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow users to read and update their own document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
